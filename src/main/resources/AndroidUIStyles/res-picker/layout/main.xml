<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">

    <com.android.sdklib.widgets.iOSTextPicker xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:orientation="vertical"
                                              android:background="@drawable/picker_single"
                                              android:layout_marginRight="110dp"
                                              android:layout_gravity="center_horizontal|right">
        <com.android.sdklib.widgets.iOSTextView
                style = "@style/CrossOSTextView"
                android:textColor="@color/ios_gray"
                android:layout_margin="5dp"
                android:text="Mountain View"/>
        <com.android.sdklib.widgets.iOSTextView
                style = "@style/CrossOSTextView"
                android:textColor="@color/ios_gray"
                android:layout_margin="5dp"
                android:text="Sunnyvale"/>
        <com.android.sdklib.widgets.iOSTextView
                style = "@style/CrossOSTextView"
                android:textColor="@color/ios_black"
                android:layout_margin="5dp"
                android:text="Cupertino"/>
        <com.android.sdklib.widgets.iOSTextView
                style = "@style/CrossOSTextView"
                android:textColor="@color/ios_gray"
                android:layout_margin="5dp"
                android:text="Santa Clara"/>
        <com.android.sdklib.widgets.iOSTextView
                style = "@style/CrossOSTextView"
                android:textColor="@color/ios_gray"
                android:layout_margin="5dp"
                android:text="San Jose"/>
    </com.android.sdklib.widgets.iOSTextPicker>
    
</LinearLayout>