<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light"/>
    <style name="AppTheme" parent ="AppBaseTheme"/>

    <!-- XOS Slider -->
    <style name="XOSSlider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressDrawable">@drawable/xos_progress_view_drawable</item>
        <item name="android:thumb">@drawable/xos_slider_thumb</item>
        <item name="android:padding">20dp</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>