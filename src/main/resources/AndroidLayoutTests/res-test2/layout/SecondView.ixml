<?xml version="1.0" encoding="utf-8"?>
<com.android.sdklib.widgets.iOSViewController
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     xmlns:xrt="http://schemas.android.com/apk/res/android"
     android:orientation="vertical"
     android:weightSum="1"
     xrt:viewController="org.moe.SampleMOSProject.ui.UISecondController"
     xrt:segue_type="present modality"
     xrt:initialViewController="false">

<com.android.sdklib.widgets.iOSTextView
                style="@style/XOSLabel"
                android:textSize="15dp"
                android:text="Enter Name:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left" android:id="@+id/com.android.sdklib.widgets.iOSTextView"
                android:layout_weight="0.03"/>
                <com.android.sdklib.widgets.iOSTextField
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    style="@style/XOSTextField"
                    android:id="@+id/com.android.sdklib.widgets.iOSTextField"
                    android:layout_weight="0.03"
                    xrt:iboutlet="nameEdit"/>
                <com.android.sdklib.widgets.iOSTextView
                    style="@style/XOSLabel"
                    android:textSize="15dp"
                    android:text="Enter SirName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/com.android.sdklib.widgets.iOSTextView"
                    android:layout_weight="0.03"/>
                <com.android.sdklib.widgets.iOSTextField
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    style="@style/XOSTextField"
                    android:id="@+id/com.android.sdklib.widgets.iOSTextField"
                    android:layout_weight="0.03"
                    xrt:iboutlet="sirNameEdit"/>
                <com.android.sdklib.widgets.iOSButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Add Record"
                    android:layout_gravity="left"
                    style="@style/XOSButton"
                    android:id="@+id/com.android.sdklib.widgets.iOSButton"
                    android:layout_weight="0.03"
                    xrt:ibaction="touchUpInside-saveAction:"
                    xrt:iboutlet="addButton"/>
                <com.android.sdklib.widgets.iOSButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Return To List"
                    style="@style/XOSButton"
                    android:id="@+id/com.android.sdklib.widgets.iOSButton"
                    android:layout_weight="0.03"
                    xrt:segue_type="show"
                    xrt:segue_destination="sample_design.ixml"/>
            </com.android.sdklib.widgets.iOSViewController>